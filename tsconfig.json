{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "pretty": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["es7", "dom"]
  },
  "include": ["packages"],
  "exclude": ["node_modules"]
}
